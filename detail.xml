<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/gambar"
            android:layout_width="500dp"
            android:layout_height="170dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:src="@drawable/selena"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:text="judul"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="25dp"
            android:id="@+id/judullagu" />

        <ImageView
            android:id="@+id/gambar_artis"
            android:layout_width="81dp"
            android:layout_height="91dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="165dp"
            android:layout_marginTop="206dp"
            android:src="@drawable/selenaaa"/>

        <TextView
            android:layout_width="222dp"
            android:layout_height="77dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="340dp"
            android:textColor="#ffffff"
            android:text="Description:" />

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="301dp"
            android:layout_marginEnd="171dp"
            android:textColor="#ffffff"
            android:text="Description:"
            />


        <ImageView
            android:id="@+id/rating"
            android:layout_width="211dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="105dp"
            android:layout_marginTop="424dp"
            android:src="@drawable/rating"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/stroke"
            android:textColor="@android:color/white"
            android:text="Give Your Rating" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="155dp"
            android:layout_marginTop="560dp"
            android:textColor="#ffffff"
            android:text="Play Songs From:" />

        <ImageView
            android:id="@+id/spotify"
            android:layout_width="73dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="89dp"
            android:layout_marginTop="589dp"
            android:src="@drawable/spotify"/>

        <ImageView
            android:id="@+id/youtube"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="256dp"
            android:layout_marginTop="588dp"
            android:src="@drawable/youtube"/>


    </RelativeLayout>
</ScrollView>